---
import("../styles/global.scss")

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,300;0,400;0,500;0,600;0,700;0,900;1,100&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/6543bd4db3.js"
      crossorigin="anonymous"
    ></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --font-size-link-mobile: 1.2rem;

        /* Theme colors */
        --color-highlight: #1b4bf7;
        --color-highlight-light: #0fbffc;
        --color-highlight-deep: #5b0ffc;
        --color-text: hsl(12, 5%, 4%);
        --color-border: hsl(17, 24%, 90%);

        /* Dark light */
        --color-fg: #ffffffe3;
        --color-bg: #1b1b1b;

        /* Social colors */
        --color-twitter: #1d9bf0;
        --color-youtube: #ff0000;
        --color-github: #727272;
      }

      @media (prefers-color-scheme: light) {
        :root {
          --color-fg: #ffffff;
          --color-bg: #1b1b1b;
        }
      }

      /* Buttons */
      /* .btn {
        margin: auto;
        padding-inline: var(--pd-500);
        padding-block: var(--pd-300);
        border-radius: 5px;
      } */

      html {
        /* font-family: system-ui, sans-serif; */
        font-family: "Barlow", sans-serif;
        /* font-size: var(--font-size-base); */
        color: var(--color-fg);
        background-color: var(--color-bg);
      }

      body {
        margin: 0;
      }
    </style>

