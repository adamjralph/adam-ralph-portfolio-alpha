---
import("../styles/global.scss")
import("../styles/header.scss")
---

<div class="container-mobile">
  <main id="main" class="main">
    <section id="hero" class="hero">
      <!-- <h1 class="hero__heading">Hello adventurer,</h1> -->
      <div class="hero-text">
        <h1 class="hero__heading hero__heading--2">
          I build <span class="text-gradient">
            <a href="#"> internet things</a>
          </span>
        </h1>
        <p class="hero__text">
          I'm a web developer and movement enthusiast based in Melbourne,
          Australia
        </p>
      </div>
      <div class="hero__action">
        <a href="#contact" class="hero__contact"
          ><button class="btn nav__btn nav__link hero__btn">Lets Code</button>
        </a>
        <!-- Social links -->
        <div class="hero__social header__social">
          <!-- Twitter -->
          <a
            href="http://twitter.com/adamjralph"
            class="social__link social__link--twitter"
          >
            <i class="fa-brands fa-twitter fa-xl hero__social__icon--twitter"
            ></i>
          </a>
          <!-- Youtube-->
          <a
            href="https://www.youtube.com/channel/UCRMH3kvPD8o1Khssr4A8EWg"
            class="social__link social__link--youtube"
          >
            <i class="fa-brands fa-youtube fa-xl hero__social__icon--youtube"
            ></i>
          </a>
          <!-- Github -->
          <a
            href="https://github.com/adamjralph"
            class="social__link social__link--github"
          >
            <i class="fa-brands fa-github fa-xl hero__social__icon--github"></i>
          </a>
        </div>
      </div>
    </section>
  </main>
</div>

<style>
  .hero {
    margin-block-start: 3rem;
    background-color: var(--color-bg);
  }

  .hero__heading {
    line-height: 1.3;
    margin-block-start: 2rem;
    margin-inline-start: 2rem;
    text-align: left;
    max-width: 50%;
    color: var(--color-bg);
    font-size: var(--font-size-lg);
  }

  .hero__opacity {
    visibility: none;
  }

  .hero__heading--2 {
    color: var(--color-fg);
    font-size: var(--font-size-xl);
  }

  .hero__text {
    line-height: 1.2;
    margin-block-start: 1rem;
    margin-inline-start: 2rem;
    text-align: left;
    max-width: 40%;
  }

  .hero__action {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    flex-direction: row-reverse;
    padding-inline: 1rem;
    padding-block-start: 1.5rem;
  }

  .hero__social {
    max-width: 50%;
    /* margin-inline-start: 0; */
  }

  .social__link {
    /* padding-block-start: 2rem; */
    padding-inline-end: 0.3rem;
  }

  .hero__contact {
    width: 100%;
    max-width: 40%;
    margin-inline-end: 1rem;
  }
  .header__social__icon {
    color: var(--color-bg);
  }
  .header__social--twitter,
  .header__social--youtube,
  .header__social--github {
    transition: color 0.3s ease-in-out;
    margin-inline: 0;
    padding-inline: 0;
  }

  .hero__social__icon--twitter:hover,
  .hero__social__icon--twitter:focus {
    color: var(--color-twitter);
  }
  .hero__social__icon--youtube:hover,
  .hero__social__icon--youtube:focus {
    color: var(--color-youtube);
  }

  .hero__social__icon--github {
    border-radius: 50%;
  }
  .hero__social__icon--github:hover,
  .hero__social__icon--github:hover {
    color: var(--color-highlight-deep);
    /* background-color: var(--color-fg); */
  }
</style>
