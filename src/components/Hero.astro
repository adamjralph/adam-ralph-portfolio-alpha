---
import("../styles/global.scss")
import("../styles/header.scss")
---

<div class="container-mobile">
  <main id="main" class="main">
    <section id="hero" class="hero">
      <!-- <h1 class="hero__heading">Hello adventurer,</h1> -->
      <div class="hero__content">
        <div class="hero-text">
          <h1 class="hero__heading hero__heading--2">
            I build <span class="text-gradient">
              <a href="#"> internet things</a>
            </span>
          </h1>
          <p class="hero__text">
            I'm a web developer and movement enthusiast based in Melbourne,
            Australia
          </p>
        </div>
        <a href="#contact" class="hero__contact"
          ><button class="btn nav__btn nav__link hero__btn">Lets Code</button>
        </a>
      </div>
      <div class="horizontal-line"></div>
      <!-- Social links -->
      <div class="hero__social header__social">
        <!-- Twitter -->
        <a
          href="http://twitter.com/adamjralph"
          class="social__link social__link--twitter"
        >
          <i class="fa-brands fa-twitter fa-xl header__social__icon--twitter"
          ></i>
        </a>
        <!-- Youtube-->
        <a
          href="https://www.youtube.com/channel/UCRMH3kvPD8o1Khssr4A8EWg"
          class="social__link social__link--youtube"
        >
          <i class="fa-brands fa-youtube fa-xl header__social__icon--youtube"
          ></i>
        </a>
        <!-- Github -->
        <a
          href="https://github.com/adamjralph"
          class="social__link social__link--github"
        >
          <i class="fa-brands fa-github fa-xl header__social__icon--github"></i>
        </a>
      </div>
      <div class="horizontal-line"></div>
    </section>
  </main>
</div>

<style>
  .hero {
    display: block;
    margin-block-start: 3rem;
    background-color: var(--color-bg);
  }

  .hero__content {
    display: flex;
    align-items: flex-end;
    margin-block-end: 3rem;
  }

  .hero__heading {
    line-height: 1.3;
    margin-block-start: 2rem;
    margin-inline-start: 2rem;
    text-align: left;
    max-width: 70%;
    color: var(--color-bg);
    font-size: var(--font-size-lg);
  }

  .hero__heading--2 {
    color: var(--color-fg);
    font-size: var(--font-size-xl);
  }

  .hero__text {
    line-height: 1.2;
    margin-block-start: 1rem;
    margin-inline-start: 2rem;
    text-align: left;
    max-width: 60%;
  }

  .hero__contact {
    width: 100%;
    max-width: 32%;
    margin-inline-end: 2rem;
  }

  .horizontal-line {
    height: 1px;
    background-color: var(--color-fg);
    margin-inline: 2rem;
    margin-block: 1rem;
  }

  .hero__action {
    display: flex;
    align-items: baseline;
    justify-content: center;
    /* padding-block-start: 3rem; */
  }

  .hero__social {
    display: flex;
    justify-content: space-between;
    padding-inline: 1rem;
    /* margin-inline: auto; */
    /* max-width: 100%; */
    /* margin-inline-start: 0; */
  }

  .social__link {
    /* padding-block-start: 2rem; */
    /* padding-inline-end: 0.3rem; */
  }

  .hero__btn {
    padding: 0.2rem;
  }
</style>
